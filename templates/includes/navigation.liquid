

<div class="cd-overlay"></div>

<nav class="cd-nav">
    <ul id="cd-primary-nav" class="cd-primary-nav">
        {% for link in global.main-nav %}
            <li class="{% if link.sub  %}has-children{% endif %} {% if mixture.url == link.url %}active{% endif %}" >
                <a href="{% if link.sub  %}#0{% else %}{{ link.url }}{% endif %}">{{ link.text }}</a>
                {% if link.sub %}
                    {% if link.sub.settings.type == 'tree' %}
                        <ul class="cd-secondary-nav is-hidden">
                            <li class="go-back"><a href="#0">Zurück</a></li>
                            {% if link.sub.settings.bottom-url != empty %}
                                <li class="see-all {% if mixture.url == link.sub.settings.bottom-url %}active{% endif %}">
                                    <a href="{{ link.sub.settings.bottom-url }}">{{ link.sub.settings.bottom-text }}</a>
                                </li>
                            {% endif %}
                            {% for category in link.sub.items %}
                                <li class="has-children  {% if mixture.url == category.url %}active{% endif %}">
                                    <a href="{{category.url}}">{{category.text}}</a>
                                    {% if category.sub %}
                                        <ul class="is-hidden">
                                            <li class="go-back"><a href="#0">Zurück</a></li>
                                            {% if category.url != empty %}
                                                <li class="see-all {% if mixture.url == category.url %}active{% endif %}"><a href="{{ category.url }}">Alle anzeigen</a></li>
                                            {% endif %}
                                            {% for link in category.sub %}
                                                <li class="{% if link.sub  %}has-children{% endif %} {% if mixture.url == link.url  %}active{% endif %}">
                                                    <a href="{% if link.sub  %}#0{% else %}{{ link.url }}{% endif %}">{{ link.text }}</a>
                                                    {% if link.sub  %}
                                                        <ul class="is-hidden">
                                                            <li class="go-back"><a href="#0">Zurück</a></li>
                                                            {% if link.url != empty %}
                                                                <li class="see-all {% if mixture.url == link.url %}active{% endif %}"><a href="{{ link.url }}">Alle anzeigen</a></li>
                                                            {% endif %}
                                                            {% for link in link.sub %}
                                                                <li class="{% if mixture.url == link.url %}active{% endif %}"><a href="{{ link.url }}">{{ link.text }}</a></li>
                                                            {% endfor %}
                                                        </ul>
                                                    {% endif %}
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    {% elseif link.sub.settings.type == 'gallery' %}
                        <ul class="cd-nav-gallery is-hidden">
                            <li class="go-back"><a href="#0">Zurück</a></li>
                            {% if link.sub.settings.bottom-url != empty %}
                                <li class="see-all {% if mixture.url == link.sub.settings.bottom-url %}active{% endif %}"><a href="{{ link.sub.settings.bottom-url }}">{{ link.sub.settings.bottom-text }}</a></li>
                            {% endif %}

                            {% for link in link.sub.items %}
                                <li  class="{% if mixture.url == link.url  %}active{% endif %}">
                                    <a class="cd-nav-item" href="{{link.url}}">
                                        <img src="{{link.img}}" alt="{{link.img}}">
                                        <h3>{{link.text}}</h3>
                                        <p>{{link.description}}</p>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% elseif link.sub.settings.type == 'icon' %}
                        <ul class="cd-nav-icons is-hidden">
                            <li class="go-back"><a href="#0">Zurück</a></li>
                            {% if link.sub.settings.bottom-url != empty %}
                                <li class="see-all {% if mixture.url == link.url %}active{% endif %}"><a href="{{ link.sub.settings.bottom-url }}">{{ link.sub.settings.bottom-text }}</a></li>
                            {% endif %}
                            {% for link in link.sub.items %}
                                <li class="{% if mixture.url == link.url %}active{% endif %}">
                                    <a class="cd-nav-item {{link.icon}}" href="{{link.url}}">
                                        <h3>{{link.text}}</h3>
                                        <p>{{link.description}}</p>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                {% endif %}
            </li>
        {% endfor %}

    </ul> <!-- primary-nav -->
</nav> <!-- cd-nav -->

<div id="cd-search" class="cd-search">
    <form>
        <input type="search" placeholder="Suche...">
    </form>
</div>
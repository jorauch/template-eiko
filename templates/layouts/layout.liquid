<!doctype html>
<html lang="de">
    <head>
        <meta charset="utf-8">
        <title>{% block title %}Mixture + Bootstrap{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {{ "reset.css" | asset_url | stylesheet_tag }}
        {{ "layout.css" | asset_url | stylesheet_tag }}
        {{ "modernizr.min.js" | asset_url | script_tag }}
    </head>
    <body>
        {% include "navigation-bar" %}
        <main class="cd-main-content">
            <div class="container">
                {% block content %}{% endblock %}
            </div>
        </main>
        {% include "navigation" %}
        {{ "jquery.min.js" | asset_url | script_tag }}
        {{ "jquery.mobile.custom.min.js" | asset_url | script_tag }}
        {{ "bootstrap.min.js" | asset_url | script_tag }}
        {{ "navigation.min.js" | asset_url | script_tag }}
    </body>
</html>

